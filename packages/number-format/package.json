{
  "name": "@react-input/number-format",
  "version": "2.0.3",
  "license": "MIT",
  "author": "Nikolay Goncharuk <goncharuk.bro@gmail.com>",
  "description": "React input component for formatted number input with locale-specific.",
  "keywords": [
    "react",
    "react-component",
    "react-hook",
    "react-number-format",
    "input",
    "input-number-format",
    "text-field",
    "number",
    "format",
    "number-format",
    "currency-format",
    "percent-format",
    "pattern"
  ],
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-input"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoncharukOrg/react-input.git",
    "directory": "packages/number-format"
  },
  "bugs": {
    "url": "https://github.com/GoncharukOrg/react-input/issues"
  },
  "homepage": "https://github.com/GoncharukOrg/react-input/tree/main/packages/number-format#readme",
  "files": [
    "@types",
    "cdn",
    "module",
    "node"
  ],
  "sideEffects": false,
  "type": "module",
  "types": "@types/index.d.ts",
  "module": "module/index.js",
  "main": "node/index.cjs",
  "exports": {
    ".": {
      "types": "./@types/index.d.ts",
      "import": "./module/index.js",
      "require": "./node/index.cjs"
    },
    "./*": {
      "types": "./@types/*.d.ts",
      "import": "./module/*.js",
      "require": "./node/*.cjs"
    },
    "./*.js": {
      "types": "./@types/*.d.ts",
      "import": "./module/*.js",
      "require": "./node/*.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "@types/index.d.ts": [
        "@types/index.d.ts"
      ],
      "*": [
        "@types/*"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsx ../../scripts/build.ts",
    "release:major": "tsx ../../scripts/release.ts major",
    "release:minor": "tsx ../../scripts/release.ts minor",
    "release:patch": "tsx ../../scripts/release.ts patch"
  },
  "dependencies": {
    "@react-input/core": "^2.0.2"
  },
  "peerDependencies": {
    "@types/react": ">=16.8",
    "react": ">=16.8 || ^19.0.0-rc",
    "react-dom": ">=16.8 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
